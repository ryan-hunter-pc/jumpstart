<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <%
      case name.to_s
      when 'notice'
        color = 'red'
      when 'alert'
        color = 'green'
      else
        color = 'blue'
      end
    %>

    <div class="bg-<%= color %>-lightest border border-<%= color %>-light text-<%= color %>-dark px-4 py-3 rounded relative" role="alert">
      <%= content_tag :span, msg, class: "flash_#{name}" %>
      <span class="absolute pin-t pin-b pin-r px-4 py-3">
        <svg class="fill-current h-6 w-6 text-<%= color %>" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>Close</title><path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"/></svg>
      </span>
    </div>
  <% end %>
<% end %>
